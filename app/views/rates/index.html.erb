<p id="notice"><%= notice %></p>

<h1>Rates</h1>

<table>
  <thead>
    <tr>
      <th>Origin</th>
      <th>Destination</th>
      <th>Basic</th>
      <th>Advance</th>
      <th>Premium</th>
      <th>Insurance</th>
      <th>Vendor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rate.each do |rate| %>
      <tr>
        <td><%= rate.origin %></td>
        <td><%= rate.destination %></td>
        <td><%= rate.basic %></td>
        <td><%= rate.advance %></td>
        <td><%= rate.premium %></td>
        <td><%= rate.insurance %></td>
        <td><%= rate.vendor_id %></td>
        <td><%= link_to 'Show', vendor_rate_path(@vendor, rate) %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Edit', edit_vendor_rate_path(@vendor, rate) %></td>
        <td><%= link_to 'Destroy', vendor_rate_path(@vendor, rate), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
<%= link_to 'New Rate', new_vendor_rate_path(@vendor) %>
  <% end %>
<%= link_to 'Back to Vendor', @vendor %>